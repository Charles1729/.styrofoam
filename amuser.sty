% section
\titleformat{\section}{\larger[2]\bfseries\color{primary}}{}{0em}{#1}[\vspace{0.1em}\titlerule]
\titlespacing*{\section}{0pt}{0pt}{5pt}

% subsection
\titleformat{\subsection}
    {\normalsize\bfseries\raggedright\color{secondary}}
    {}{0em}
    {#1}
    []
\titlespacing*{\subsection}{0pt}{0.7ex plus 0.3ex minus 0.1ex}{0.5ex minus 0.1ex}

\newcommand{\entry}[5]{%
  \par\noindent
  \begin{tabular*}{\linewidth}{@{}l@{\extracolsep{\fill}}r@{}}
    {\larger[1]{\bfseries #1} {\color{gray} \hspace{0pt}$\mid$\hspace{2.0pt}\smaller[1]\raisebox{.1ex}{#2}}}
    & 
    {\normalsize\itshape #4 $\cdot$ #5}%
  \end{tabular*}\par
  {\small #3}\par
}