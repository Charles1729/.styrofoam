\newcommand{\contactinfo}[3]{
    \begin{center}
        {\larger[4]\textbf{\@author}}\\[0.3cm]
        \textcolor{secondary}{
            #1 \textbullet{} #2 \textbullet{} #3
        }
    \end{center}
}

% icons
\newcommand{\emailsymbol}{\faEnvelope}
\newcommand{\phonesymbol}{\faPhone}
\newcommand{\locationsymbol}{\faMapMarker}
\newcommand{\linkedinsymbol}{\faLinkedin}
\newcommand{\githubsymbol}{\faGithub}
\newcommand{\websitesymbol}{\faGlobe}

% commands using those icons
\newcommand{\email}[1]{\emailsymbol\hspace{0.5em}#1}
\newcommand{\phone}[1]{\phonesymbol\hspace{0.5em}#1}
\newcommand{\location}[1]{\locationsymbol\hspace{0.5em}#1}
\newcommand{\linkedin}[1]{\linkedinsymbol\hspace{0.5em}#1}
\newcommand{\github}[1]{\githubsymbol\hspace{0.5em}#1}
\newcommand{\website}[1]{\websitesymbol\hspace{0.5em}#1}

